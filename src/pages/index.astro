						<SocialPill href="mailto:bgonzaleza2896@gmail.com">
							<MailIcon class="size-4"/>
							bgonzaleza2896@gmail.com
						</SocialPill>
				</nav>
		</SectionContainer>
		<SectionContainer id="experience" class="py-44 pb-14">
			<h1 class="text-white text-4xl font-semibold mb-6">Experiencia laboral</h1>
			<Experience/>
